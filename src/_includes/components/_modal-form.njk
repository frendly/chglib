{% macro modalShell(templateId, titleId) %}
<template id="{{ templateId }}">
  <div class="modal" role="dialog"{% if titleId %} aria-labelledby="{{ titleId }}"{% endif %} aria-modal="true" style="display: none">
    <div class="modal__content">
      {{ caller() }}
    </div>
  </div>
</template>
{% endmacro %}

{% macro formShell() %}
<form class="form" novalidate>
  <div class="form__message" role="alert" aria-live="polite" hidden></div>
  {{ caller() }}
  <div class="form__actions">
    <button type="submit" class="form__submit">Отправить</button>
    <button type="button" class="form__cancel">Отмена</button>
  </div>
</form>
{% endmacro %}
