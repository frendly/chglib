{
  "compilerOptions": {
    // Целевая версия JavaScript для компиляции (ES2022 совместима с Node.js 20+)
    "target": "ES2022",

    // Система модулей: ESNext для поддержки современных ES модулей
    "module": "ESNext",

    // Стратегия разрешения модулей: "bundler" позволяет импортировать без расширений .js
    "moduleResolution": "bundler",

    // Библиотеки типов, которые будут доступны (ES2022 включает все современные API)
    "lib": ["ES2022"],

    // Директория для скомпилированных файлов (не используется, т.к. noEmit: true)
    "outDir": "./dist",

    // Корневая директория исходных файлов
    "rootDir": "./",

    // Включить строгую проверку типов
    "strict": true,

    // Совместимость с CommonJS модулями (позволяет импортировать npm пакеты)
    "esModuleInterop": true,

    // Пропустить проверку типов в файлах .d.ts из node_modules (ускоряет компиляцию)
    "skipLibCheck": true,

    // Требовать одинаковый регистр в именах файлов (важно для кроссплатформенности)
    "forceConsistentCasingInFileNames": true,

    // Разрешить импорт JSON файлов как модулей
    "resolveJsonModule": true,

    // Разрешить использование JavaScript файлов вместе с TypeScript (для постепенной миграции)
    "allowJs": true,

    // Не проверять типы в JavaScript файлах (т.к. клиентский код остается JS)
    "checkJs": false,

    // Не генерировать .d.ts файлы (типы не нужны, т.к. используется tsx для запуска)
    "declaration": false,

    // Не генерировать source maps для .d.ts файлов
    "declarationMap": false,

    // Не генерировать source maps (не нужны, т.к. используется tsx для запуска)
    "sourceMap": false,

    // Не компилировать файлы в JavaScript (tsx выполняет TypeScript напрямую)
    "noEmit": true,

    // Алиасы путей для импортов
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  // Файлы и директории, которые должны быть включены в компиляцию
  "include": [
    ".eleventy.ts",
    "build-assets.ts",
    "src/**/*.ts"
  ],

  // Файлы и директории, которые должны быть исключены из компиляции
  "exclude": [
    "node_modules",        // Зависимости не проверяем
    "dist",                // Скомпилированные файлы
    "src/assets/js/**/*"   // Клиентский JavaScript код обрабатывается esbuild отдельно
  ]
}
